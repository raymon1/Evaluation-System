			<div class="page-header">
				<h1>
					Welcome <%= current_user.first_name %> ! 
				</h1>
			</div>
			<div class="row">
				<div class="col-md-4">
					<h3 class="text-left">
						Please, choose the course 
					</h3>
				</div>
				<div class="col-md-4">
					<div class="btn-group">				
						<button class="btn btn-success btn-lg ">
							Course
						</button> 
						<button data-toggle="dropdown" class="btn btn-default btn-lg dropdown-toggle">
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<% instructor_courses.each do |c| %>
							<li>
			<%= link_to c["code"] ,{controller:"instructors",action:"course",course: c["code"] }%>
							</li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>
			<br></br>
			<div class="row">
				<div class="col-md-3">
					<h3 align="middle">
						Quiz
					</h3>
					<ul class="list-group">
						<% quizzes = instructor_quizzes course %>
						<% quizzes.each do |q| %>
					  <li class="list-group-item" align = "middle" ><a href="/forms/<%=q["form_id"]%>"> <%= q["title"] %> </a></li>
					 	<% end %>
					</ul>
				</div>
				<div class="col-md-3">
					<h3 align="middle">
						Assignement
					</h3>
					<ul class="list-group">
					  	<% assignments = instructor_assignments course %>
						<% assignments.each do |q| %>
					  <li class="list-group-item" align = "middle" ><a href="/forms/<%= q["form_id"] %>"><%= q["title"] %></a></li>
					  <% end %>
					</ul>
					<!-- <button type="button" class="btn btn-success btn-default">
						Create Assignement
					</button> -->
				</div>
					<div class="col-md-3">
					<h3 align="middle">
						Sheet
					</h3>
					<ul class="list-group">
					  <% sheets = instructor_sheets course %>
						<% sheets.each do |q| %>
					  <li class="list-group-item" align = "middle" ><a href="/forms/<%= q["form_id"] %>s"><%= q["title"] %></a></li>
					  <%end%>
					</ul>
					<!-- <button type="button" class="btn btn-success btn-default">
						Create Sheet
					</button> -->
				</div>
				<div class="col-md-3">
					<h3 align="middle">
						Feedback
					</h3>
					<ul class="list-group">
						<% feedbacks = instructor_feedbacks course %>
						<% feedbacks.each do |q| %>					 
						 <li class="list-group-item" align = "middle" ><a href="<%= q["form_id"] %>"><%= q["title"] %></a></li>
					  <%end%>
					</ul>
					<!-- <button type="button" class="btn btn-success btn-default">
						Create Feedback Form
					</button> -->
				</div>
			</div>

			<div class="row">
			<div class="col-md-4">

			</div>
				
			</div>

			
			<div class="row">
				<div class="col-md-3" align="middle">
					<%= link_to "Create Quiz" ,{controller: "quizzes" ,action: "show",c: course}, {:type => 'button', :class => 'btn btn-success btn-default'} %>
				</div>
				<div class="col-md-3" align="middle">
					<%= link_to "Create Assignment" ,{controller: "assignments" ,action: "show",c: course}, {:type => 'button', :class => 'btn btn-success btn-default'} %>
				</div>
				<div class="col-md-3" align="middle">
					<%= link_to "Create Sheet" ,{controller: "sheets" ,action: "show",c: course}, {:type => 'button', :class => 'btn btn-success btn-default'} %>
				</div>
				<div class="col-md-3" align="middle">
					<%= link_to "Create Feedback" ,{controller: "feedbacks" ,action: "show",c: course}, {:type => 'button', :class => 'btn btn-success btn-default'} %>
				</div>
			</div> 
		</div>

	</div>
