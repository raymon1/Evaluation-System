<div class="form-group" > 
     <label class="text-inline" id="NewQuestion">Question </label> 
     <label class="text-inline" >
	     <input name="<%= "mcq_question_mark" + @mcq_count.to_s %>" type="text" class="form-control" placeholder="Question Mark" id="QMark">
	 </label>
	 <div>
	 <textarea name="<%= "mcq_question" + @mcq_count.to_s %>" class="form-control" rows="3"></textarea>
	 </div>
</div>
<div class="form-group">
     <label for="NewAnswer">Answer</label>
      <div class="radio">
         <label>
         <input name="<%= "mcq_answer_ch1" + @mcq_count.to_s %>" type="radio" name="optionsRadios" id="optionsRadios1" value="option1">
         <textarea name=  "<%= "mcq_choice1_" + @mcq_count.to_s %>" class="form-control" rows="3"></textarea>
         </label>
      </div>
	<div class="radio">
		<label>
			<input name="<%= "mcq_answer_ch2" + @mcq_count.to_s %>" type="radio" name="optionsRadios" id="optionsRadios1" value="option1">
