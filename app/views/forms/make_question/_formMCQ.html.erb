	     <input name="<%= "mcq_hint_enable" + @mcq_count.to_s %>" type="checkbox" value="">Hint
	 </label>
	<!-- displayed if is checked -->
	<label class="text-inline" >
	     <input name="<%= "mcq_hint_mark" + @mcq_count.to_s %>" type="text" class="form-control" placeholder="Hint Mark" id="QhintMark">
	</label>
	<label class="text-inline" >
	     <input name="<%= "mcq_hint" + @mcq_count.to_s %>" type="text" class="form-control" placeholder="Hint" id="Qhint">
